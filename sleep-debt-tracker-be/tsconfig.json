{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "outDir": "./dist",  // Directory where compiled files will be output
    "skipLibCheck": true  // Optional: Skips type checking of declaration files
  },
  "include": [
    "./*.ts"  // Ensure this matches your source directory structure
  ]
}
